<?xml version="1.0" encoding="utf-8" ?>
<primitives:BasePage
    x:Class="Gallery.Controls.SearchBarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Gallery.Controls"
    xmlns:primitives="clr-namespace:Gallery.Primitives"
    Title="SearchBar"
    x:DataType="controls:SearchBarViewModel"
    x:TypeArguments="controls:SearchBarViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="SearchBar" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                Text="Exibe um controle de entrada de usuário para iniciar uma pesquisa." />

            <SearchBar
                Placeholder="Pesquisar..."
                SearchCommand="{Binding FilterByCommand}"
                SearchCommandParameter="{Binding Source={RelativeSource Self}, Path=Text, x:DataType=SearchBar}" />

            <CollectionView
                ItemsSource="{Binding Items}"
                SelectionMode="None" />

            <controls:FurtherDetailsLabel Url="https://learn.microsoft.com/dotnet/maui/user-interface/controls/searchbar" />
        </VerticalStackLayout>
    </ScrollView>
</primitives:BasePage>
