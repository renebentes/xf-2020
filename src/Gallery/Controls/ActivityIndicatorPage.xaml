<?xml version="1.0" encoding="utf-8" ?>
<primitives:BasePage
    x:Class="Gallery.Controls.ActivityIndicatorPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Gallery.Controls"
    xmlns:primitives="clr-namespace:Gallery.Primitives"
    Title="ActivityIndicator"
    x:DataType="controls:ActivityIndicatorViewModel"
    x:TypeArguments="controls:ActivityIndicatorViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="ActivityIndicator" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                Text="Exibe uma animação indicando que o aplicativo está envolvido em uma atividade muito longa." />

            <Label
                FontSize="18"
                Text="IsRunning, Color" />

            <ActivityIndicator
                IsRunning="True"
                Color="OrangeRed" />

            <controls:FurtherDetailsLabel Url="https://learn.microsoft.com/dotnet/maui/user-interface/controls/activityindicator" />
        </VerticalStackLayout>
    </ScrollView>
</primitives:BasePage>
