<?xml version="1.0" encoding="utf-8" ?>
<primitives:BasePage
    x:Class="Gallery.Controls.BoxViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Gallery.Controls"
    xmlns:primitives="clr-namespace:Gallery.Primitives"
    Title="BoxViewPage"
    x:DataType="controls:BoxViewModel"
    x:TypeArguments="controls:BoxViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="BoxView" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                Text="Desenha um retÃ¢ngulo ou quadrado simples, de largura, altura e cor especificados." />

            <BoxView
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                Color="CornflowerBlue" />

            <BoxView
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="30"
                Color="CornflowerBlue" />

            <BoxView
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="1"
                Color="CornflowerBlue" />

            <BoxView
                BackgroundColor="Transparent"
                CornerRadius="5"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                Color="CornflowerBlue" />

            <BoxView
                BackgroundColor="Transparent"
                CornerRadius="50"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="100"
                Color="CornflowerBlue" />

            <BoxView
                BackgroundColor="Transparent"
                CornerRadius="15"
                HeightRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="30"
                Color="CornflowerBlue" />

            <controls:FurtherDetailsLabel Url="https://learn.microsoft.com/dotnet/maui/user-interface/controls/boxview" />
        </VerticalStackLayout>
    </ScrollView>
</primitives:BasePage>
