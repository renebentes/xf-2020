<?xml version="1.0" encoding="utf-8" ?>
<primitives:BasePage
    x:Class="Gallery.Controls.RefreshViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Gallery.Controls"
    xmlns:primitives="clr-namespace:Gallery.Primitives"
    Title="RefreshView"
    x:DataType="controls:RefreshViewViewModel"
    x:TypeArguments="controls:RefreshViewViewModel">
    <RefreshView>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,0"
                Spacing="25"
                VerticalOptions="Center">

                <Label
                    FontSize="32"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level1"
                    Text="RefreshView" />

                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level2"
                    Text="Um controle de contêiner que fornece a funcionalidade pull to refresh para conteúdo rolável." />

                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    SemanticProperties.HeadingLevel="Level3"
                    TextColor="Red"
                    VerticalOptions="Center" />

                <controls:FurtherDetailsLabel Url="https://learn.microsoft.com/dotnet/maui/user-interface/controls/refreshview" />
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</primitives:BasePage>
