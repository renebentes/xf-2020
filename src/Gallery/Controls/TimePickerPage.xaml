<?xml version="1.0" encoding="utf-8" ?>
<primitives:BasePage
    x:Class="Gallery.Controls.TimePickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Gallery.Controls"
    xmlns:primitives="clr-namespace:Gallery.Primitives"
    Title="TimePicker"
    x:DataType="controls:TimePickerViewModel"
    x:TypeArguments="controls:TimePickerViewModel">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="TimePicker" />

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level2"
                Text="Exibe o seletor de horário da plataforma, permitindo sua seleção." />

            <Label
                FontSize="18"
                Text="Time, Format" />

            <TimePicker
                Format="HH:mm"
                Time="{Binding SelectedTime}" />

            <controls:FurtherDetailsLabel Url="https://learn.microsoft.com/dotnet/maui/user-interface/controls/timepicker" />
        </VerticalStackLayout>
    </ScrollView>
</primitives:BasePage>
